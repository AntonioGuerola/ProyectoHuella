<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../styles/comparacionImpactoStyle.css"
            xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.views.ComparacionImpactoController">

    <center>
        <AnchorPane prefHeight="600.0" prefWidth="900.0">
            <VBox alignment="CENTER" layoutX="100.0" layoutY="50.0" prefHeight="500.0" prefWidth="700.0" spacing="20.0">

                <TableView fx:id="tablaImpacto" prefHeight="200.0" prefWidth="600.0">
                    <columns>
                        <TableColumn fx:id="columnaUsuario" prefWidth="300.0" text="Usuario"/>
                        <TableColumn fx:id="columnaImpacto" prefWidth="300.0" text="Impacto Ambiental (kg CO₂)"/>
                    </columns></TableView>

                <BarChart fx:id="graficoImpacto" prefHeight="300.0" prefWidth="600.0">
                    <xAxis>
                        <CategoryAxis fx:id="ejeUsuarios" label="Usuarios"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="ejeImpacto" label="Impacto Ambiental (kg CO₂)"/>
                    </yAxis>
                </BarChart>

                <HBox alignment="CENTER" spacing="15.0">
                    <Button fx:id="btnActualizar" onAction="#actualizarDatos" text="Actualizar"/>
                    <Button fx:id="btnBack" onAction="#goBack" text="Volver"/>
                </HBox>
            </VBox>
        </AnchorPane>
    </center>

</BorderPane>
